{
  "name": "fhenix-hardhat-example",
  "version": "1.0.0",
  "description": "A boilerplate repository to get you started with Hardhat and Ethereum development",
  "scripts": {
    "test": "hardhat test",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "task:deploy": "hardhat deploy",
    "task:addCount": "hardhat task:addCount",
    "task:getCount": "hardhat task:getCount",
    "fhenix:start": "hardhat localfhenix:start",
    "fhenix:stop": "hardhat localfhenix:stop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NomicFoundation/hardhat-boilerplate.git"
  },
  "author": "Nomic Foundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NomicFoundation/hardhat-boilerplate/issues"
  },
  "homepage": "https://github.com/NomicFoundation/hardhat-boilerplate#readme",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@fhenixprotocol/contracts": "^0.1.0-beta.3",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@openzeppelin/contracts": "^5.0.1",
    "chai": "^4.4.1",
    "hardhat": "^2.19.4",
    "hardhat-fhenix": "file:../fhenix-hardhat-plugin/packages/hardhat-fhenix",
    "hardhat-fhenix-docker": "file:../fhenix-hardhat-plugin/packages/hardhat-fhenix-docker",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2"
  },
  "dependencies": {
    "fhenix-hardhat-plugin-root": "github:FhenixProtocol/fhenix-hardhat-plugin"
  }
}